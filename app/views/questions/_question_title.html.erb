<div class="question-container">
  <div class="row">
    <div class="col-md-2">
      <div class="row">
        <div class="col-md-6 text-center">
          <div class="question-badge"><%= question.reputation %></div>
          <div>votes</div>
        </div>
        <div class="col-md-6 text-center">
          <div class="question-badge"><%= question.answers.count %></div>
          <div>answers</div>
        </div>
      </div>
    </div>
    <div class="col-md-10">
      <div class="question-title">
        <%= link_to question.title, question_path(question) %>
      </div>
      <div class="question-post-info">
        <div class="row">
          <div class="col-md-4">
            <% question.tags.each do |tag| %>
              <%= tag.name %>
            <% end %>
          </div>
          <div class="col-md-4 col-md-offset-4 text-right">
            asked <%= question.age %> ago <%= question.user.name %> <%= question.user.reputation %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>