<!DOCTYPE html>
<html>
  <head>
    <title>Stackoverflowclone</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Stackoverflow</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <li><a>Profile</a></li>
              <li><%= link_to 'Sign Out', {action: :destroy, controller: :sessions}, method: :delete, data: {confirm: "Are you sure?"}%></li>
              <li><a>Welcome, <%= current_user.name %></a></li>
            <% else %>
              <li><%= link_to 'Sign In', new_sessions_path %></li>
              <li><%= link_to 'Sign Up', new_user_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container yield-container">
      <%= yield %>
    </div>
  </body>
</html>